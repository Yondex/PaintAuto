<h2>Записаться</h2>
<script type = "text/javascript">
  $(function(){
    $('#color').simplecolorpicker();
    $('#datetimepicker1').datetimepicker();
  });
</script>
<form action = "/visit" method="POST" class="form-inline">
  <div class="form-group">
    <label for="exampleInputName2"> Name </label>
    <input  name = "client[name]" type="text" class="form-control" id="exampleInputName2" placeholder="Jane Doe" value ="<%= @user_name %>">
  </div>
  <p>
  <div class="form-group">
    <label for="exampleInputEmail2"> Phone </label>
    <input name = "client[phone]" type="text" class="form-control "  id="exampleInputEmail2" >
  </div>
</p>
<p>
  <div class="form-group">
    <label for="exampleInputEmail2"> Data </label>
    <input   id="datetimepicker1" name = "client[datestamp]" type="text" class="form-control " >
  </div>
</p>
<p>
  <div class="form-group">
    <label for="exampleInputEmail2"> Auto </label>
    <input name = "client[auto]" type="text" class="form-control "  id="exampleInputEmail2" >
  </div>
</p>
  <div class="form-group" >
    <label for="exampleInputEmail2"> Выберите цвет покраски </label>
    <select id="color" name = "client[color]">
      <option value="#7bd148">Green</option>
      <option value="#5484ed">Bold blue</option>
      <option value="#a4bdfc">Blue</option>
      <option value="#46d6db">Turquoise</option>
      <option value="#7ae7bf">Light green</option>
      <option value="#51b749">Bold green</option>
      <option value="#fbd75b">Yellow</option>
      <option value="#ffb878">Orange</option>
      <option value="#ff887c">Red</option>
      <option value="#dc2127">Bold red</option>
      <option value="#dbadff">Purple</option>
      <option value="#e1e1e1">Gray</option>
    </select>
  </div>
  <button type="submit" class="btn btn-primary">Send</button>
</form>
